<%= form_with(model: current_user.favorites.build, local: false) do |f| %>
  <div><%= hidden_field_tag :recipe_id, @recipe.id %></div>
  <div class="recipe__favorite-layout">
    <%= f.submit "お気に入り", class: "unfavorite" %>
    <%= image_tag 'unfavorite.svg', :alt => 'お気に入り解除状態' %>
  </div>
<% end %>