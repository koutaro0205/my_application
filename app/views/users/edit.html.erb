<% provide(:title, "ユーザー設定") %>

<section class="section content-width">
  <div class="form__inner">
    <h1 class="sectionTitle">現在の登録情報</h1>
    <ul class="profileCard__info">
      <li class="profileCard__image">
        <%= render 'users/current_user_image'%>
      </li>
      <li class="profileCard__user">
        <p class="profileCard__user-name"><%= link_to current_user.name, current_user %></p>
        <p class="profileCard__user-email"><%= current_user.email %></p>
      </li>
    </ul>
  </div>
</section>
<section class="section content-width">
  <div class="form__inner">
    <h1 class="sectionTitle">登録情報（編集）</h1>
    <%= form_with(model: @user, local: true, class: "form") do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "名前", class: "form__label" %>
      <%= f.text_field :name, class: "form__field" %>

      <%= f.label :email, "メールアドレス", class: "form__label" %>
      <%= f.email_field :email, class: "form__field" %>

      <%= f.label :password, "パスワード", class: "form__label" %>
      <%= f.password_field :password, class: "form__field" %>

      <%= f.label :password_confirmation, "パスワード（確認）", class: "form__label" %>
      <%= f.password_field :password_confirmation, class: "form__field" %>

      <%= f.label :image, "プロフィール画像(再設定)", class: "form__label" %>
      <%= f.file_field :image, class: "image__field", accept: "image/jpeg,image/gif,image/png" %>

      <%= f.submit "登録情報を更新", class: "form__btn btn" %>
    <% end %>
  </div>
</section>