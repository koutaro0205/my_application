<% provide(:title, "ユーザー登録") %>
<section class="section content-width">
  <div class="form__inner">
    <h1 class="sectionTitle">ユーザー登録</h1>
    <%= form_with(model: @user, local: true, class: "form") do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, "名前", class: "form__label" %>
      <%= f.text_field :name, class: "form__field" %>

      <%= f.label :email, "メールアドレス", class: "form__label" %>
      <%= f.email_field :email, class: "form__field" %>

      <%= f.label :password, "パスワード", class: "form__label" %>
      <%= f.password_field :password, class: "form__field" %>

      <%= f.label :password_confirmation, "パスワード（確認）", class: "form__label" %>
      <%= f.password_field :password_confirmation, class: "form__field" %>

      <%= f.submit "ユーザー登録", class: "form__btn btn" %>
    <% end %>
  </div>
</section>
